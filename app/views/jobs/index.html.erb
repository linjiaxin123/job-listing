<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path ) %>

        </li>
    </ul>
</div>


	<h2 style="text-align:center">选择岗位</h2>

<div>
    <% @jobs.each do |job| %>

<div class="col-md-4 ">
<div class="columns">

          <div class="container">
              <div class="row">

                <div class="col-md-4">
                  <!-- item -->
                  <div class="text-center">
                      <div class="panel panel-success panel-pricing">
                          <div class="panel-heading">
                              <i class="fa fa-desktop"></i>
                              <h3><%= link_to(job.title, job_path(job)) %></h3>
                          </div>
                          <div class="panel-body text-center">
                              <p><strong><%= job.description %></strong></p>
                          </div>
                          <ul class="list-group text-center">
                              <li class="list-group-item highlight">薪酬下限：￥<%= job.wage_lower_bound %></li>
                              <li class="list-group-item highlight">薪酬上限：￥<%= job.wage_upper_bound %></li>
                              <li class="list-group-item highlight">创建时间：<%= job.created_at %></li>
                          </ul>
                          <div class="panel-footer">
                              <div class="grey btn btn-block btn-success"><%= link_to("查看详情", job_path(job)) %></div>
                          </div>
                      </div>
                  </div>
                  <!-- /item -->
                </div>
              </div>
          </div>

</div>
</div>
<% end %>
</div>

<br>
<div class="text-center col-xs-12">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
